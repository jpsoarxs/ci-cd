pipeline {
    agent any

    environment {
        AWS_REGION = 'us-east-1'
        AWS_ACCOUNT_ID = '635101881545'
        ECR_REPO = 'express-prod'
        IMAGE_TAG = 'latest'
        PEM_FILE = credentials('aws-prod-ec2-pem-file')
        SSH_USER = 'ec2-user'
        SSH_PORT = '22'
        EC2_INSTANCE_IP = '54.209.124.70'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker image') {
            steps {
                script {
                    docker.build("${ECR_REPO}:${IMAGE_TAG}")
                }
            }
        }

        stage('Push Docker image to ECR') {
            steps {
                script {
                    docker.withRegistry("https://${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com", '635101881545.dkr.ecr.us-east-1.amazonaws.com') {
                        dockerImage.push("${ECR_REPO}:${IMAGE_TAG}")
                    }
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                script {
                    sshagent(['aws-prod-ec2-pem-file']) {
                        def sshCommand = "ssh -o StrictHostKeyChecking=no -i ${PEM_FILE} -p ${SSH_PORT} ${SSH_USER}@${EC2_INSTANCE_IP} docker pull ${ECR_REPO}:${IMAGE_TAG} && docker run -d -p 80:80 ${ECR_REPO}:${IMAGE_TAG}"
                        sh "echo '${sshCommand}' | ssh -tt ${SSH_USER}@${EC2_INSTANCE_IP} -i ${PEM_FILE} -p ${SSH_PORT}"
                    }
                }
            }
        }
    }
}